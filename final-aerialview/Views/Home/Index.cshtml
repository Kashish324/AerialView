        window.onload = function () {
            var newTabPageUrl = '@Url.Action("DefaultDashboard", "DefaultDashViewer", new { page = "DefaultDashboard" })';

            // Open a new window with the generated URL
            const openedWindow = window.open(
                newTabPageUrl,
                "DefaultDashboard",
                "width=2000,height=1900,resizable,scrollbars"
            );

            // Optionally, focus on the new window
            if (openedWindow) {
                openedWindow.focus();
            }
