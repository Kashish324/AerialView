        var isNewTabOpened = '@ViewBag.IsNewTabOpened' === 'True';
        if (!isNewTabOpened) {
            var newTabPageUrl = '@Url.Action("DefaultDashboard", "DefaultDashViewer", new { page = "DefaultDashboard" })';
            var newTab = window.open(newTabPageUrl, '_blank');
            newTab.focus();
        }
    };

