@{
    var menuParentData = ViewData["MenuParentData"] as IEnumerable<final_aerialview.Models.ListDataModel>;
    var subMenuData = ViewData["SubMenuData"] as IEnumerable<final_aerialview.Models.SubMenuModel>;
    var childMenuData = ViewData["ChildMenuData"] as IEnumerable<final_aerialview.Models.ChildMenuModel>;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AerialView-3.0</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/remixicon@4.2.0/fonts/remixicon.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.3/css/bootstrap.min.css" integrity="sha512-jnSuA4Ss2PkkikSOLtYs8BlYIeeIK1h99ty4YfvRPAlzr377vr3CXDb7sb7eEEBYjDtcYj+AjBH3FLv5uSJuXg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/report.css" asp-append-version="true" />

    @* dev extreme links *@
    <link rel="stylesheet" href="~/css/thirdparty.bundle.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="~/js/thirdparty.bundle.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>


    <link href="~/css/devextreme/dx.light.css" rel="stylesheet" />
    <link href="~/css/devextreme/bootstrap.css" rel="stylesheet" />
    <script src="~/js/devextreme/jquery.js"></script>
    <script src="~/js/devextreme/dx.all.js"></script>
    <script src="~/js/devextreme/aspnet/dx.aspnet.mvc.js"></script>
    <script src="~/js/devextreme/aspnet/dx.aspnet.data.js"></script>



    @RenderSection("ExternalDependencies", false)
</head>

@{
    var MenuIcons = new[]
    {
        (1, "ri-menu-2-line"),
        (2, "ri-file-chart-2-line"),
        (3, "ri-tools-line"),
        (4, "ri-settings-4-fill"),
        (5, "ri-dashboard-line"),
        (6, "ri-account-pin-box-line"),
        (7, "ri-terminal-window-line")
    };
}

<body>

    @if (ViewContext.RouteData.Values["controller"].ToString() != "Report")
    {
        <div class="sidebar close">
            <div class="logo-details">
                <i class="bi bi-buildings"></i>
                <span class="logo_name">Hi-Mak Pvt. Ltd.</span>
            </div>

            <ul class="nav-links">
                @if (menuParentData != null && subMenuData != null && childMenuData != null)
                {
                    @foreach (var mainItem in menuParentData)
                    {
                        var hasSubmenu = subMenuData.Any(subItem => subItem.MainMenuCode == mainItem.MenuCode);
                        var correspondingIcon = MenuIcons.FirstOrDefault(icon => icon.Item1 == mainItem.MenuCode);

                        <li>
                            <div class="icon-link">
                                <div class="listMenu">
                                    @if (correspondingIcon != default)
                                    {
                                        <i class="@correspondingIcon.Item2"></i>
                                    }
                                    else
                                    {
                                        <i class="ri-list-indefinite"></i>
                                    }
                                    <span class="link_name">@mainItem.MenuName</span>
                                </div>
                                @if (hasSubmenu)
                                {
                                    <i class="ri-arrow-down-s-line arrow"></i>
                                }
                            </div>

                            @if (hasSubmenu)
                            {
                                <ul class="sub-menu">
                                    @foreach (var subItem in subMenuData.Where(subItem => subItem.MainMenuCode == mainItem.MenuCode))
                                    {
                                        var hasChildmenu = childMenuData.Any(childItem => childItem.SubMenuCode == subItem.SubMenuCode);

                                        <li class="subMenu-link">
                                            @if(mainItem.MenuName == "Reports")
                                            {
                                                    <div class="icon-link">
                                                        <div class="listMenu">
                                                            <i class="ri-box-3-line"></i>
                                                            <span>@subItem.SubMenuName</span>
                                                        </div>
                                                        @if (hasChildmenu)
                                                        {
                                                            <i class="ri-arrow-right-s-line sub-menu-arrow"></i>
                                                        }
                                                    </div>
                                            }
                                            else
                                            {
                                                
                                            <a href="@Url.Action("ReportConfiguration", "Submenu", new { parentMenu  = mainItem.MenuName, submenu  = subItem.SubMenuName })" class="text-decoration-none">
                                            <div class="icon-link">
                                                <div class="listMenu">
                                                    <i class="ri-box-3-line"></i>
                                                    <span>@subItem.SubMenuName</span>
                                                </div>
                                                @if (hasChildmenu)
                                                {
                                                    <i class="ri-arrow-right-s-line sub-menu-arrow"></i>
                                                }
                                            </div>
                                            </a>
                                            }

                                            @if (hasChildmenu)
                                            {
                                                <ul class="childSubMenu">
                                                    @foreach (var childItem in childMenuData.Where(childItem => childItem.SubMenuCode == subItem.SubMenuCode))
                                                    {
                                                        <li>
                                                            <a href="@Url.Action("Index", "ListData", new { subMenuId = childItem.SubMenuId, subMenuName = childItem.SubChildName })" class="text-decoration-none">
                                                                <div class="icon-link">
                                                                    <div class="listMenu">
                                                                        <i class="ri-bard-line"></i>
                                                                        <span>@childItem.SubChildName</span>
                                                                    </div>
                                                                </div>
                                                            </a>
                                                        </li>
                                                    }
                                                </ul>
                                            }
                                        </li>
                                    }
                                </ul>
                            }
                        </li>
                    }
                }
            </ul>

        </div>

        <section class="home-section">
            <div class="home-content">
                <div class="headerContent">
                    <i class="ri-arrow-right-double-line bx bx-menu"></i>

                    @* @if (ViewData["DatabaseName"] != null)
                    {
                        <span class="text text-center" id="selected-submenu"> @ViewData["TableName"]</span>
                    }
                    else
                    {
                        <span class="text text-center" id="selected-submenu">AerialView Reporting Software</span>

                    } *@

                    @if (ViewContext.RouteData.Values["controller"].ToString() != "ListData")
                    {
                        if (ViewData["MenuName"] != null)
                        {
                            <span class="text text-center" id="selected-submenu">@ViewData["MenuName"]</span>
                        }
                        else
                        {
                            <span class="text text-center" id="selected-submenu">AerialView Reporting Software</span>
                        }
                    }
                    else
                    {
                        if (ViewData["TableName"] != null)
                        {
                            <span class="text text-center" id="selected-submenu">@ViewData["TableName"]</span>
                        }
                        else
                        {
                            <span class="text text-center" id="selected-submenu">AerialView Reporting Software</span>
                        }
                    }

                </div>


                @if (ViewContext.RouteData.Values["controller"]?.ToString() != "ListData" && ViewContext.RouteData.Values["controller"]?.ToString() != "Submenu")
                {

                    <div class="tableContent">
                        <h1 class='tableHeading'> Home Page </h1>
                        <div>Please select an item </div>
                    </div>
                }

                <main role="main">
                    @RenderBody()
                </main>

            </div>
        </section>
    }
    else
    {
        <main role="main">
            @RenderBody()
        </main>
    }

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.3/js/bootstrap.min.js" integrity="sha512-ykZ1QQr0Jy/4ZkvKuqWn4iF3lqPZyij9iRv6sGqLRdTPkY69YX6+7wvVGmsdBbiIfN/8OdsI7HABjvEok6ZopQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
