@{
    ViewData["Title"] = "Event Configuration";
}

@{
    var reports = ViewData["Reports"] as IEnumerable<final_aerialview.Models.ChildMenuModel>;
}


<div class="container-fluid p-3">

    <div class="my-2 mt-1 p-1 d-flex flex-wrap align-items-center justify-content-between">
        <div class="fw-semibold text-decoration-underline mb-3 fs-5 text-center text-md-start">
            Alarm and Event Configuration
        </div>
    </div>



    <!-- Event Configuration Card -->
    <div class="card p-3 mb-3 bg-light shadow">

        <!-- Form Content -->
        <form>
            <!-- Row 1: Connection String, Table Name and Column Name -->
            <div class="row mb-2">
                <div class="col-12 col-md-4 mb-2">
                    <label for="connectionString" class="form-label fw-medium">Connection String:</label>
                    <select class="form-select form-select-sm" id="connectionString" required>
                        <option value="">Select connection string</option>
                        @*  @foreach (var connString in uniqueConnectionStrings)
                        {
                        <option class="fw-medium" value="@connString">@connString</option>
                        } *@
                        @if (reports != null)
                        {

                            @foreach (var report in reports)
                            {
                                <option class="fw-medium" value="">@report.stringName</option>
                            }
                        }

                    </select>
                </div>
                <div class="col-12 col-md-4 mb-2">
                    <label for="tableName" class="form-label fw-medium">Table Name:</label>
                    <select class="form-select form-select-sm" id="tableName" required>
                        <option value="">Select table</option>
                    </select>
                </div>
                <div class="col-12 col-md-4 mb-2">
                    <label for="columnName" class="form-label fw-medium">Column Name:</label>
                    <select class="form-select form-select-sm" id="columnName" required>
                        <option value="">Select Column</option>
                    </select>
                </div>
            </div>

            <!-- Row 2: Alarm & Warning Limits -->
            <div class="row mb-2">
                <div class="col-12 col-md-3 mb-2">
                    <label for="alarmLow" class="form-label fw-medium">Alarm Low:</label>
                    <input type="number" class="form-control form-control-sm" id="alarmLow" placeholder="Low alarm value" required>
                </div>
                <div class="col-12 col-md-3 mb-2">
                    <label for="alarmHigh" class="form-label fw-medium">Alarm High:</label>
                    <input type="number" class="form-control form-control-sm" id="alarmHigh" placeholder="High alarm value" required>
                </div>
                <div class="col-12 col-md-3 mb-2">
                    <label for="warningLow" class="form-label fw-medium">Warning Low:</label>
                    <input type="number" class="form-control form-control-sm" id="warningLow" placeholder="Low warning value" required>
                </div>
                <div class="col-12 col-md-3 mb-2">
                    <label for="warningHigh" class="form-label fw-medium">Warning High:</label>
                    <input type="number" class="form-control form-control-sm" id="warningHigh" placeholder="High warning value" required>
                </div>
            </div>

            <!-- Row 3: Multiple Emails Input for Notification -->
            <div class="mb-2">
                <label for="emailInput" class="form-label fw-medium">Send Notification to Emails:</label>
                <input type="email" class="form-control form-control-sm" id="emailInput" placeholder="Enter multiple emails separated by commas" multiple required>
            </div>

            <!-- Submit Button -->
            <div class="d-flex justify-content-end text-center mt-3">
                <button type="submit" class="btn bg-primary-subtle btn-sm border-primary-subtle fw-medium focus-ring focus-ring-primary">Save Configuration</button>
            </div>
        </form>

    </div>

    <!-- Data Table Section (Responsive) -->
    <div class="card p-3 mb-3">
        <h5 class="card-title text-center mb-3 fs-5">Existing Configurations</h5>
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-sm">
                <thead>
                    <tr class="text-center">
                        <th>Id</th>
                        <th>Connection String</th>
                        <th>Table Name</th>
                        <th>Column Name</th>
                        <th>Alarm Low</th>
                        <th>Alarm High</th>
                        <th>Warning Low</th>
                        <th>Warning High</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <tr class="text-center">
                        <td>1</td>
                        <td class="align-middle"
                            data-bs-toggle="tooltip"
                            data-bs-placement="top"
                            title="Data Source=192.168.1.204;Initial Catalog=GODIVAPUMPTESTSETUP;Integrated Security=False; User ID=sa; Password=admin@123;">
                            <span class="text-truncate" style="display: inline-block; max-width: 150px;">
                                Data Source=192.168.1.204;Initial Catalog=GODIVAPUMPTESTSETUP;Integrated Security=False; User ID=sa; Password=admin@123;
                            </span>
                        </td>
                        <td>TableA</td>
                        <td>ColumnX</td>
                        <td>10</td>
                        <td>50</td>
                        <td>15</td>
                        <td>45</td>
                        <td class="text-center align-middle">
                            <button class="p-0 border-0 bg-transparent btn btn-sm btn-warning fs-5" aria-label="Edit">
                                <i class="ri-edit-line text-warning"></i>
                            </button>
                            <div class="mx-2" style="display: inline-block; border-left: 1px solid #ccc; height: 10px;"></div>
                            <button class="p-0 border-0 bg-transparent btn btn-sm btn-danger fs-5" aria-label="Delete">
                                <i class="ri-delete-bin-5-line text-danger"></i>
                            </button>
                        </td>
                    </tr>
                    <!-- Add more rows as needed -->
                </tbody>
            </table>
        </div>


    </div>
</div>




<script>
    // Initialize Bootstrap tooltips when the document is ready
    document.addEventListener('DOMContentLoaded', function () {
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
        tooltipTriggerList.forEach(function (tooltipTriggerEl) {
            new bootstrap.Tooltip(tooltipTriggerEl);
        });
    });

</script>