@{
    ViewData["Title"] = ViewData["MenuName"];
}

@{
    var reportData = ViewData["ReportData"] as IEnumerable<final_aerialview.Models.LocalReportModel>;
    var reportType = ViewData["ReportType"] as IEnumerable<final_aerialview.Models.LocalReportModel>;
}

@{
    var TypeIcons = new Dictionary<string, string>
    {
        { "Tabular", "ri-grid-fill" },
        { "Bar-Chart", "ri-bar-chart-grouped-fill" },
        { "Live-Chart", "ri-bubble-chart-line" },
    };
}


<div class="reportConfig-nav mb-1 p-1 d-flex align-items-center justify-content-between">
    <div>
    <span class="badge active rounded-pill bg-dark text-light fs-6 fw-normal mr-1" onclick="filterReports('All')"><i class="ri-file-chart-2-line"></i> All</span>
    @if (reportType != null)
    {
        @foreach (var type in reportType)
        {
            string icon = TypeIcons.ContainsKey(type.ReportType) ? TypeIcons[type.ReportType] : "ri-line-chart-line";
            <span class="badge rounded-pill bg-dark text-light fs-6 my-2 fw-normal mr-1" data-type="@type.ReportType" onclick="filterReports('@type.ReportType')"> <i class="@icon"></i> @type.ReportType </span>
        }
    }
    </div>

    <form class="d-flex searchBox" role="search">
        <div class="input-group ">
            <span class="input-group-text border border-secondary-subtle bg-white" id="search-icon">
                <i class="ri-search-2-line"></i>
            </span>
            <input class="form-control border-start-0  border border-secondary-subtle" type="search" placeholder="Search..." aria-label="Search">
        </div>
    </form>
    
</div>




<div class="reportConfig d-flex justify-content-center mb-3 mt-2">

    <ol class="list-group list-group-numbered w-100 ">
        @if (reportData != null)
        {
            @foreach (var reportItem in reportData)
            {
                <a href="@Url.Action("ReportDesigner", "Report", new { datagridRptid = reportItem.RptId })" class="text-decoration-none text-dark report-item" data-type="@reportItem.ReportType">
                <li class="list-group-item list-group-item-action d-flex justify-content-between align-items-start">
                    <div class="ms-2 me-auto">
                        <div class="fw-bold reportName">
                                @reportItem.ReportName
                        </div>
                        <p class="mb-1 text-muted connName">@reportItem.ConnName</p>

                    </div>
                    <span class="badge rounded-pill text-muted" >@reportItem.ReportType</span>
                </li>
                </a>
            }
        }

    </ol>

    
</div>

<script>
    function filterReports(type) {
        var reports = document.querySelectorAll('.report-item');
        reports.forEach(function (report) {
            if (type === 'All' || report.getAttribute('data-type') === type) {
                report.style.display = '';
            } else {
                report.style.display = 'none';
            }
        });
    }

        // Function to filter reports based on search input
        function filterReportsBySearch() {
            var searchInput = document.querySelector('.searchBox input[type="search"]');
            var searchValue = searchInput.value.trim().toLowerCase();
            var reports = document.querySelectorAll('.report-item');

            reports.forEach(function (report) {
            var reportName = report.querySelector('.reportName').textContent.trim().toLowerCase();
            var connName = report.querySelector('.connName').textContent.trim().toLowerCase();

                if (reportName.includes(searchValue) || connName.includes(searchValue)) {
                    report.style.display = '';
                } else {
                    report.style.display = 'none';
                }
            });
        }

    document.querySelector('.searchBox input[type="search"]').addEventListener('input', filterReportsBySearch);

</script>