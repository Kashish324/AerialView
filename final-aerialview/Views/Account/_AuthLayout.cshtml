<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AerialView-3.0</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/remixicon@4.2.0/fonts/remixicon.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.3/css/bootstrap.min.css" integrity="sha512-jnSuA4Ss2PkkikSOLtYs8BlYIeeIK1h99ty4YfvRPAlzr377vr3CXDb7sb7eEEBYjDtcYj+AjBH3FLv5uSJuXg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/report.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />


</head>

<body>

    <div class="login-page position-relative d-flex align-items-center justify-content-center ms-auto" >
        <div class=" position-absolute login-wrapper bg-white d-flex align-items-center gap-4 shadow-lg  p-3 rounded-5 overflow-hidden">

            <div class="form-part w-50 h-100 d-flex flex-column">
                @* <img src="~/images/AerialView-Logo.png" class="logo-img position-sticky top-0 end-0 object-fit-cover d-block " alt="LOGO" width="15%" /> *@
                <img src="~/images/AerialView-Logo.png" class="logo-img position-sticky object-fit-cover d-block mx-auto" alt="LOGO" width="30%" />

                @* <div class="h-100  py-3 mt-3 mt-md-1"> *@
                    <div class="h-100  py-1  ">
                    @RenderBody()
                </div>

                @* <div class="text-muted copyright-text">
                    Copyright © Hi-Mak Pvt. Ltd.
                </div> *@

                <div class="text-muted copyright-text" id="copyright-year">
                    @* Copyright © Hi-Mak Pvt. Ltd. *@
                </div>

            </div>

            <div class=" img-part h-100 w-50 overflow-hidden rounded-4" style="background-color: #FBAB7E; background-image: linear-gradient(62deg, #FBAB7E 0%, #F7CE68 100%) !important;">
                <img src="~/images/login-img1.png" class="object-fit-contain rounded w-100 h-100 mx-auto d-block" />
            </div>

        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const currentYear = new Date().getFullYear();
            const copyrightElement = document.getElementById('copyright-year');
            copyrightElement.innerHTML = `Copyright © ${currentYear} Hi-Mak Pvt. Ltd.`;
        });
    </script>


    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.3/js/bootstrap.min.js" integrity="sha512-ykZ1QQr0Jy/4ZkvKuqWn4iF3lqPZyij9iRv6sGqLRdTPkY69YX6+7wvVGmsdBbiIfN/8OdsI7HABjvEok6ZopQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    @* <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/gsap.min.js" integrity="sha512-7eHRwcbYkK4d9g/6tD/mhkf++eoTHwpNM9woBxtPUBWm67zeAfFC+HrdoE2GanKeocly/VxeLvIqwvCdk7qScg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script> *@
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
