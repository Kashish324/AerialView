<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AerialView-3.0</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/remixicon@4.2.0/fonts/remixicon.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.3/css/bootstrap.min.css" integrity="sha512-jnSuA4Ss2PkkikSOLtYs8BlYIeeIK1h99ty4YfvRPAlzr377vr3CXDb7sb7eEEBYjDtcYj+AjBH3FLv5uSJuXg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/report.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
</head>

@{
    var CarouselImgs = new[]
    {
        ("login-img1.png"),
        ("login-img2.jpg"),
        ("login-img3.jpg"),
        ("login-img4.jpg"),
        ("login-img5.jpg"),
        ("login-img6.jpg"),
        ("login-img7.jpg")
    };
}



<body>

    <div class="login-page position-relative d-flex align-items-center justify-content-center ms-auto">
        <div class=" position-absolute login-wrapper bg-white d-flex align-items-center gap-4 shadow-lg  p-3 rounded-5 overflow-hidden">

            <div class="form-part w-50 h-100 d-flex flex-column ">
                <img src="~/images/logo-tm2.png" class="logo-img position-sticky object-fit-cover d-block mx-auto mt-2" alt="LOGO" width="40%" />
              
                <div class="h-100  py-1">
                    @RenderBody()
                </div>

                <div class="text-muted copyright-text" id="copyright-year">
                    @* Copyright © Hi-Mak Pvt. Ltd. *@
                </div>

            </div>

            <div class=" img-part h-100 w-50 overflow-hidden rounded-4 shadow" style="background-color: #FBAB7E; background-image: linear-gradient(62deg, #FBAB7E 0%, #F7CE68 100%) !important;">
                <div id="carouselExampleSlidesOnly" class="carousel slide carousel-fade" data-bs-ride="carousel" data-bs-interval="3000">
                    <div class="carousel-inner">

                        @foreach (var img in CarouselImgs)
                        {
                            <div class="carousel-item @((img == CarouselImgs[0] ? "active mt-5": ""))">
                                <img src="~/images/@img" class="object-fit-cover rounded w-100 h-100 mx-auto d-block" alt="....." />
                            </div>
                        }

                        
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const currentYear = new Date().getFullYear();
            const copyrightElement = document.getElementById('copyright-year');
            copyrightElement.innerHTML = `Copyright © ${currentYear} Hi-Mak Pvt. Ltd.`;
        });
    </script>


    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.3/js/bootstrap.min.js" integrity="sha512-ykZ1QQr0Jy/4ZkvKuqWn4iF3lqPZyij9iRv6sGqLRdTPkY69YX6+7wvVGmsdBbiIfN/8OdsI7HABjvEok6ZopQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
