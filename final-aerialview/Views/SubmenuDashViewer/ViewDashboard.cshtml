@model DashboardDataModel

@{
    ViewData["Title"] = Model.DashName;
    Layout = null;
}

@using DevExpress.AspNetCore
@using DevExpress.DashboardWeb
@using DevExpress.DashboardAspNetCore

<!DOCTYPE html>
<html lang="en">
<head>
    <title>@ViewData["Title"] - AerialView-3.0</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.3.0/fonts/remixicon.css" rel="stylesheet" />
    <link href="~/css/site.min.css" rel="stylesheet" />
    <link href="~/css/ace/ace.bundle.css" rel="stylesheet" />
    <script src="~/js/site.min.js"></script>
    <link href="~/css/dashboard.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />

</head>
<body>
 
    @if (Model != null && Model.DashPath != null)
    {
        <div class="d-flex align-items-start justify-content-between pt-1 px-4 text-primary-emphasis" style="background-color: #F5F5F5;">
            <a title="Back" href="javascript:history.back()" class="text-decoration-none text-primary-emphasis"><i class="ri-arrow-left-s-line"></i></a>
            <h6 class="fw-bold textShadow-hover">@Model.DashName</h6>
            <a href="/Home/Index" class="text-decoration-none text-primary-emphasis" title="Home"><i class="ri-home-2-line"></i></a>
        </div>
        
        string dashPath = Model.DashPath.Substring(0, Model.DashPath.LastIndexOf("."));

        <div style="position: absolute; left:0;top:26px;right:0;bottom:0;" class="border-top">
            @(Html.DevExpress().Dashboard("clientDashboardControl")
                .ControllerName("DefaultDashboard")
                .Width("100%")
                .Height("100%")
                .WorkingMode(WorkingMode.Viewer)
                .InitialDashboardId(dashPath)
                )
        </div>

    }


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

</body>
</html>
